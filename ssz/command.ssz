  public void update()
  {
    int osu = 15, hanasu = 60;
    bool sub(int t=)
    {
      if(--t <= 0){
        if(.m.rand(1, `osu) == 1){
          t = .m.rand(1, `hanasu);
          ret true;
        }
        t = 0;
      }
      ret false;
