public bool update()
{
  branch{
  cond #.replay > 0:
    .se.event(.anyHardButton() ? 240 : 60);
    ret .replay~update();
  cond #.net > 0:
    .se.event(60);
    ret .net~update();
  }
  ret .se.event(60);
}

public bool synchronize()
{
  branch{
  cond #.replay > 0:
    .replay~synchronize();
  cond #.net > 0:
    if(!.net~synchronize()) ret false;
  }
  ret true;
}

