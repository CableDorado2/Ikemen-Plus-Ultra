public void error<_t>(^/char m)
{
	.al.alert!_t?(m);
}

public bool videoActive = false;

public &Video
{
	new()
	{
		`clear();
	}
	public void clear()
	{
	//Default Values
		^/char file = "";
		int volume = 100;
		int audiotrack = 1;
		int subtitletrack = 0;
	}
	/^/char fileName;
	public void play(^/char file, int volume, int audiotrack)
	{
		^/char error;
		&.file.File f;
		f.open(file, "rb");
		if(f.open(file, "rb"))
		{
			`fileName = file;
			.videoActive = true;
			.sdl.playVideo(audiotrack, volume, `fileName);
		}
	}
}
public ^&Video video.new(1);