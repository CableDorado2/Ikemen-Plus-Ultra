public int atoi(^/char str)
{
  int n = 0;
  branch{
    ^/char a = .s.trim(str);
  cond<minus> #a > 0 && a<> == '-':
    a = a[1 .. -1];
  cond<plus> #a > 0 && a<> == '+':
    a = a[1 .. -1];
  comm:
    loop{int i = 0; while; do:
      n = n*10 + (int)(a[i] - '0');
      i++;
    while i < #a && a[i] >= '0' && a[i] <= '9':}
  diff<minus>:
    n *= -1;
  }
  ret n;
}

