public ^char loadText(^/char filename,  bool unicode=)
{
  ^ubyte buf = .file.readAll!ubyte?(filename);
  ^char text;
  branch{
  cond #buf >= 3 && buf[0] == 0xef  && buf[1] == 0xbb && buf[2] == 0xbf:
    unicode = true;
    buf = buf[3..-1];
    text = .s.u8ToS(buf);
  else:
    unicode = false;
    loop{
      index i = 0;
      text.new(#buf);
      while;
    do:
      text[i] = (char)buf[i];
      i++;
    while i < #buf:}
  }
  ret text;
}

